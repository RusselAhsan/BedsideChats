<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/title_textView_signup_port"
        android:layout_width="472dp"
        android:layout_height="320dp"
        android:background="@drawable/background"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/whiteFont"
        android:textSize="100sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/email_textView_signup_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="244dp"
        android:layout_marginTop="67dp"
        android:text="@string/email"
        android:textColor="@color/whiteFont"
        android:textSize="40sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintBottom_toTopOf="@+id/username_textView_signup_port"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_textView_signup_port" />

    <EditText
        android:id="@+id/email_editText_signup_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:fontFamily="@font/assistant"
        android:inputType="textEmailAddress"
        android:textColor="@color/whiteFont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_textView_signup_port" />

    <TextView
        android:id="@+id/username_textView_signup_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:text="@string/username"
        android:textColor="@color/whiteFont"
        android:textSize="40sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintEnd_toStartOf="@+id/password_editText_signup_port"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_textView_signup_port" />

    <EditText
        android:id="@+id/username_editText_signup_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:fontFamily="@font/assistant"
        android:inputType="textPassword"
        android:textColor="@color/whiteFont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_editText_signup_port" />

    <TextView
        android:id="@+id/password_textView_signup_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:text="@string/password"
        android:textColor="@color/whiteFont"
        android:textSize="40sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintBottom_toTopOf="@+id/signup_button_signup_port"
        app:layout_constraintEnd_toStartOf="@+id/username_editText_signup_port"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username_textView_signup_port"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/password_editText_signup_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/assistant"
        android:inputType="textPassword"
        android:textColor="@color/whiteFont"
        app:layout_constraintBottom_toTopOf="@+id/signup_button_signup_port"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_editText_signup_port"
        app:layout_constraintVertical_bias="0.095" />

    <Button
        android:id="@+id/signup_button_signup_port"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginBottom="344dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/sign_up"
        android:textColor="@color/whiteFont"
        android:textSize="30sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/login_button"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/login"
        android:textColor="@color/whiteFont"
        android:textSize="30sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintTop_toBottomOf="@id/signup_button_signup_port"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>