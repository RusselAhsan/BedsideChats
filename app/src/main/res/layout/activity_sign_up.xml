<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/title_textView_signup_port"
        android:layout_width="550dp"
        android:layout_height="400dp"
        android:background="@drawable/background"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/whiteFont"
        android:textSize="130sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />


    <EditText
        android:id="@+id/email_editText_signup_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="124dp"
        android:ems="10"
        android:fontFamily="@font/assistant"
        android:inputType="textEmailAddress"
        android:textColor="@color/whiteFont"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_textView_signup_port" />

    <TextView
        android:id="@+id/email_textView_signup_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="244dp"
        android:layout_marginTop="36dp"
        android:text="@string/email"
        android:textColor="@color/whiteFont"
        android:textSize="45sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintEnd_toStartOf="@+id/email_editText_signup_port"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_textView_signup_port" />

    <EditText
        android:id="@+id/username_editText_signup_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="124dp"
        android:ems="10"
        android:fontFamily="@font/assistant"
        android:inputType="textPassword"
        android:textColor="@color/whiteFont"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_editText_signup_port" />

    <TextView
        android:id="@+id/password_textView_signup_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="16dp"
        android:text="@string/password"
        android:textColor="@color/whiteFont"
        android:textSize="45sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintEnd_toStartOf="@+id/password_editText_signup_port"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_textView_signup_port" />

    <EditText
        android:id="@+id/password_editText_signup_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="124dp"
        android:ems="10"
        android:fontFamily="@font/assistant"
        android:inputType="textPassword"
        android:textColor="@color/whiteFont"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_editText_signup_port" />

    <TextView
        android:id="@+id/username_textView_signup_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/username"
        android:textColor="@color/whiteFont"
        android:textSize="45sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintEnd_toStartOf="@+id/username_editText_signup_port"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_textView_signup_port" />

    <Button
        android:id="@+id/signup_button_signup_port"
        android:layout_width="240dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_corner_button"
        android:text="@string/sign_up"
        android:textColor="@color/whiteFont"
        android:textSize="50sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_editText_signup_port" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="240dp"
        android:layout_height="160dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_corner_button"
        android:text="@string/login"
        android:textColor="@color/whiteFont"
        android:textSize="50sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_button_signup_port" />

</androidx.constraintlayout.widget.ConstraintLayout>