<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activities.MainActivity">

    <EditText
        android:id="@+id/password_editText"
        android:layout_width="173dp"
        android:layout_height="47dp"
        android:ems="10"
        android:fontFamily="@font/assistant"
        android:inputType="textPassword"
        android:textColor="@color/whiteFont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.605"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="433dp"
        app:layout_constraintTop_toTopOf="username_editText" />

    <TextView
        android:id="@+id/username_textView"
        android:layout_width="112dp"
        android:layout_height="35dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="12dp"
        android:text="Username: "
        android:textColor="@color/whiteFont"
        android:textSize="20dp"
        app:fontFamily="@font/assistant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_textView" />

    <Button
        android:id="@+id/signup_button"
        android:layout_width="94dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimaryDark"
        android:text="Sign Up"
        android:textColor="@color/whiteFont"
        app:fontFamily="@font/assistant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_editText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="224dp"
        android:layout_height="158dp"
        android:background="@drawable/background"
        android:text="Bedside Chats!"
        android:textAlignment="center"
        android:textColor="@color/whiteFont"
        android:textSize="50dp"
        app:fontFamily="@font/assistant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17" />

    <EditText
        android:id="@+id/username_editText"
        android:layout_width="173dp"
        android:layout_height="47dp"
        android:ems="10"
        android:fontFamily="@font/assistant"
        android:inputType="textPassword"
        android:textColor="@color/whiteFont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.605"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="386dp"
        app:layout_constraintTop_toTopOf="email_editText" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="29dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="20dp"
        android:text="Password:"
        android:textColor="@color/whiteFont"
        android:textSize="20dp"
        app:fontFamily="@font/assistant"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username_textView" />

    <TextView
        android:id="@+id/email_textView"
        android:layout_width="54dp"
        android:layout_height="31dp"
        android:layout_marginLeft="84dp"
        android:text="Email: "
        android:textColor="@color/whiteFont"
        android:textSize="20dp"
        app:fontFamily="@font/assistant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email_editText"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:ems="10"
        android:fontFamily="@font/assistant"
        android:inputType="textEmailAddress"
        android:textColor="@color/whiteFont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="338dp"
        app:layout_constraintTop_toTopOf="title_textView" />


</androidx.constraintlayout.widget.ConstraintLayout>