<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp">

    <FrameLayout
        android:id="@+id/card_border"
        android:background="#22ff00"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/card_inside"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            >


            <ImageView
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:alpha="0.1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:src="@drawable/logo">

            </ImageView>

            <TextView
                android:id="@+id/questionNumber_textView_card_port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Question 1"
                android:textColor="@android:color/white"
                android:textSize="60sp"
                android:textStyle="bold"></TextView>

            <View
                android:id="@+id/card_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/questionNumber_textView_card_port"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white" />


            <TextView
                android:id="@+id/question_textView_card_port"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@+id/card_divider"
                android:layout_marginHorizontal="50dp"
                android:text="@string/error"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="52sp"/>

            <Button
                android:background="@drawable/rounded_corner_button"
                android:id="@+id/card_save_button"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="Saved"
                android:layout_below="@+id/question_textView_card_port"
                android:layout_centerHorizontal="true"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:padding="30dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#22ff00"
                />

            <View
                android:id="@+id/card_divider_2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="780dp"
                android:background="@android:color/white" />

            <LinearLayout
                android:id="@+id/linlayouttest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/card_divider_2"
                android:gravity="top"
                >
                <EditText
                    android:id="@+id/notes_EditText_card_port"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/card_divider_2"
                    android:gravity="top"
                    android:hint="Write Notes Here:"
                    android:textSize="45sp"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:layout_marginHorizontal="20dp"
                    android:textColorHint="@android:color/white"
                    android:textColor="@android:color/white"></EditText>
        </LinearLayout>


        </RelativeLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>