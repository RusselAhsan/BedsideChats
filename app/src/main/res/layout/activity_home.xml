<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/title_textView_home_port"
        android:layout_width="472dp"
        android:layout_height="320dp"
        android:background="@drawable/background"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/whiteFont"
        android:textSize="100sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/select_textView_home_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="Select an option"
        android:textAlignment="center"
        android:textColor="@color/whiteFont"
        android:textSize="70sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintBottom_toTopOf="@+id/cards_button_home_port"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_textView_home_port"
        app:layout_constraintVertical_bias="0.043" />

    <Button
        android:id="@+id/cards_button_home_port"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/cards"
        android:textColor="@color/whiteFont"
        android:textSize="30sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/select_textView_home_port" />

    <Button
        android:id="@+id/favorites_button_home_port"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="72dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/saved"
        android:textColor="@color/whiteFont"
        android:textSize="30sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cards_button_home_port" />

    <Button
        android:id="@+id/provider_button_home_port"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="72dp"
        android:background="@color/colorPrimaryDark"
        android:text="Choose a Provider"
        android:textColor="@color/whiteFont"
        android:textSize="30sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favorites_button_home_port" />

