<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/title_textView_continue_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/landscape_margin_top"
        android:background="@drawable/background"
        android:text="Bedside Chats"
        android:textAlignment="center"
        android:textColor="@color/whiteFont"
        android:textSize="130sp"
        app:fontFamily="@string/fontTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/select_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/portrait_margin_top"
        android:text="@string/select_option"
        android:textAlignment="center"
        android:textColor="@color/whiteFont"
        android:textSize="100sp"
        app:fontFamily="@string/font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_textView_continue_land" />

    <Button
        android:id="@+id/continueGuest_button"
        android:layout_width="250dp"
        android:layout_height="160dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_corner_button"
        android:text="@string/continue_guest"
        android:textColor="@color/whiteFont"
        android:textSize="50sp"
        app:fontFamily="@string/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/select_textView" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="250dp"
        android:layout_height="160dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_corner_button"
        android:text="@string/login"
        android:textColor="@color/whiteFont"
        android:textSize="50sp"
        app:fontFamily="@string/font"
        app:layout_constraintEnd_toStartOf="@+id/signup_button"
        app:layout_constraintStart_toEndOf="@+id/continueGuest_button"
        app:layout_constraintTop_toBottomOf="@+id/select_textView" />

    <Button
        android:id="@+id/signup_button"
        android:layout_width="250dp"
        android:layout_height="160dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="96dp"
        android:background="@drawable/rounded_corner_button"
        android:text="@string/sign_up"
        android:textColor="@color/whiteFont"
        android:textSize="50sp"
        app:fontFamily="@string/font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_textView" />


</androidx.constraintlayout.widget.ConstraintLayout>