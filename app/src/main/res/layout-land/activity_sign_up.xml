<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    tools:context=".activities.MainActivity">


    <TextView
        android:id="@+id/title_textView_signup_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/landscape_margin_top"
        android:background="@drawable/background"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/whiteFont"
        android:textSize="130sp"
        app:fontFamily="@string/fontTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/email_editText_signup_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/landscape_margin_top"
        android:layout_marginEnd="328dp"
        android:ems="10"
        android:fontFamily="@string/font"
        android:inputType="textEmailAddress"
        android:textColor="@color/whiteFont"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_textView_signup_land" />

    <TextView
        android:id="@+id/email_textView_signup_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/landscape_margin_top"
        android:layout_marginEnd="4dp"
        android:text="@string/email"
        android:textColor="@color/whiteFont"
        android:textSize="45sp"
        app:fontFamily="@string/font"
        app:layout_constraintEnd_toStartOf="@+id/email_editText_signup_land"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_textView_signup_land" />

    <EditText
        android:id="@+id/password_editText_signup_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/landscape_margin_top"
        android:layout_marginEnd="328dp"
        android:ems="10"
        android:fontFamily="@string/font"
        android:inputType="textPassword"
        android:textColor="@color/whiteFont"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_editText_signup_land" />

    <TextView
        android:id="@+id/confirmPassword_textView_signup_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/landscape_margin_top"
        android:text="@string/confirmPassword"
        android:textColor="@color/whiteFont"
        android:textSize="45sp"
        app:fontFamily="@string/font"
        app:layout_constraintEnd_toStartOf="@+id/confirmPassword_editText_signup_land"
        app:layout_constraintHorizontal_bias="0.997"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_textView_signup_land" />

    <EditText
        android:id="@+id/confirmPassword_editText_signup_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/landscape_margin_top"
        android:layout_marginEnd="328dp"
        android:ems="10"
        android:fontFamily="@string/font"
        android:inputType="textPassword"
        android:textColor="@color/whiteFont"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_editText_signup_land" />

    <TextView
        android:id="@+id/password_textView_signup_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/landscape_margin_top"
        android:text="@string/password"
        android:textColor="@color/whiteFont"
        android:textSize="45sp"
        app:fontFamily="@string/font"
        app:layout_constraintEnd_toStartOf="@+id/password_editText_signup_land"
        app:layout_constraintHorizontal_bias="0.997"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_textView_signup_land" />

    <EditText
        android:id="@+id/username_editText_signup_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/landscape_margin_top"
        android:layout_marginEnd="328dp"
        android:ems="10"
        android:fontFamily="@string/font"
        android:inputType="textPassword"
        android:textColor="@color/whiteFont"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_editText_signup_land" />

    <TextView
        android:id="@+id/username_textView_signup_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/landscape_margin_top"
        android:text="@string/username"
        android:textColor="@color/whiteFont"
        android:textSize="45sp"
        app:fontFamily="@string/font"
        app:layout_constraintEnd_toStartOf="@+id/username_editText_signup_land"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_textView_signup_land" />

    <Button
        android:id="@+id/signup_button_signup_land"
        android:layout_width="250dp"
        android:layout_height="160dp"
        android:layout_marginTop="@dimen/portrait_margin_top"
        android:background="@drawable/rounded_corner_button"
        android:text="@string/sign_up"
        android:textColor="@color/whiteFont"
        android:textSize="50sp"
        app:fontFamily="@string/font"
        app:layout_constraintEnd_toStartOf="@+id/login_button_signup_land"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPassword_editText_signup_land" />

    <Button
        android:id="@+id/login_button_signup_land"
        android:layout_width="250dp"
        android:layout_height="160dp"
        android:layout_marginTop="@dimen/portrait_margin_top"
        android:layout_marginEnd="252dp"
        android:background="@drawable/rounded_corner_button"
        android:text="@string/login"
        android:textColor="@color/whiteFont"
        android:textSize="50sp"
        app:fontFamily="@string/font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPassword_editText_signup_land" />


</androidx.constraintlayout.widget.ConstraintLayout>