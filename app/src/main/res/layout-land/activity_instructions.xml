<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    tools:context=".activities.MainActivity">


    <TextView
        android:id="@+id/title_textView"
        android:layout_width="900dp"
        android:layout_height="210dp"
        android:background="@drawable/background"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/whiteFont"
        android:textSize="130sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/instructions_textView_instructions_land"
        android:layout_width="1210dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background"
        android:text="@string/instructions"
        android:textAlignment="center"
        android:textColor="@color/whiteFont"
        android:textSize="35sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_textView" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="250dp"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_corner_button"
        android:text="@string/next_button"
        android:textColor="@color/whiteFont"
        android:textSize="50sp"
        app:fontFamily="@font/assistant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructions_textView_instructions_land" />


</androidx.constraintlayout.widget.ConstraintLayout>